---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | cloudflare stack docs</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      :root {
        /* Starlight colors */
        --sl-color-accent: #4f39fa;
        --sl-color-accent-high: #6750ff;
        --sl-color-black: #181818;
        --sl-color-gray-1: #eceef2;
        --sl-color-gray-2: #c0c2c7;
        --sl-color-gray-3: #888b96;
        --sl-color-gray-4: #545861;
        --sl-color-gray-5: #353841;
        --sl-color-gray-6: #24272f;
        --sl-color-white: #ffffff;
        --sl-color-text: #181818;
        --sl-color-text-accent: #4f39fa;
        --sl-color-bg: #ffffff;
        --sl-color-bg-nav: #f6f6f7;
        --sl-color-bg-sidebar: #f6f6f7;
        --sl-color-danger: #dc2626;
        --sl-color-danger-low: #fef2f2;
      }

      [data-theme="dark"] {
        --sl-color-text: #fcfcfd;
        --sl-color-text-accent: #9b8bff;
        --sl-color-bg: #181818;
        --sl-color-bg-nav: #24272f;
        --sl-color-bg-sidebar: #24272f;
        --sl-color-danger: #ef4444;
        --sl-color-danger-low: #7f1d1d;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica,
          Arial, sans-serif;
        line-height: 1.6;
        color: var(--sl-color-text);
        background-color: var(--sl-color-bg);
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
